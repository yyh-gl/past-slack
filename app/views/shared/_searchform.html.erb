<div class="container">
  <div class="row">
    <div class="col-6">
      <form>
        <div class="form-group">
          <label for="channel-form">Channel</label>
          <select class="form-control" id="channel-form">
            <% @channels['channels'].each do |channel| %>
              <option><%= channel['name'] %></option>
            <% end %>
          </select>
        </div>

        <div class="form-group">
          <label for="user-form">User</label>
          <select class="form-control" id="user-form">
            <% @users['members'].each do |user| %>
              <option><%= user['name'] %></option>
            <% end %>
          </select>
        </div>

        <div class="form-group">
          <label for="message-form">Message</label>
          <textarea class="form-control" id="message-form" rows="3"></textarea>
        </div>

        <button type="submit" class="btn btn-primary">Search</button>
      </form>
    </div>
  </div>
</div>
